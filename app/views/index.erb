<div id='header'>
            <h1 id='title'>RefBot</h1>
            <p><span>hello! my name is refbot. feed me image urls and i display.</span></p>
            <button class='btn btn-primary' ng-click="ctrl.getBoard(4)">Get a Board!</button>
            <button class='btn btn-primary' ng-click="ctrl.saveBoard(4)">Save this Board!</button>
            <form name="tileForm" class='row url-form' ng-submit="ctrl.addRef(url, size)">
                <input type="text" class="form-control" ng-model="url" name="url" placeholder='url'></input>
                <div class='url-form-buttons'>
                    <select type="text" ng-model="size" name="tileSize" placeholder='size'>
                        <option value="">Select a size</option>
                        <option value='2'>2</option>
                        <option value='3'>3</option>
                        <option value='4'>4</option>
                        <option value='5'>5</option>
                        <option value='6'>6</option>
                        <option value='7'>7</option>
                        <option value='8'>8</option>
                        <option value='9'>9</option>
                        <option value='10'>10</option>
                        <option value='11'>11</option>
                        <option value='12'>12</option>
                    </select>
                    <input class='btn btn-primary'type="submit" id="submit" value="Submit"></input>
                    <span class="error" ng-show="tileForm.tileSize.$error.required">
       Size Required!</span>
                </div>
            </form>
        </div>
        <div class='all-refs'>
            <div ng-repeat='ref in ctrl.boardReferences'>
                <div class='card refs col-md-{{ref.size}} col-sm-{{ref.size}} col-xs-{{ref.size}}'>
                    <div class='buttons'>
                        <a class='btn' ng-click="ctrl.changeSize(ref, 1)">+</a>
                        <a class='btn' ng-click="ctrl.changeSize(ref,-1)">-</a>
                        <a class='btn' ng-click="ctrl.boardReferences.splice($index,1)">x</a>
                    </div>
                    <br>
                    <img class='col-md-{{ref.size}} col-sm-{{ref.size}} col-xs-{{ref.size}}' ng-src="{{ref.url}}"></img>
                </div>
            </div>
        </div>
